<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    

    <changeSet id="eug-6" logicalFilePath="path-independent" author="eugene" context="postgres">        
        <comment>Creating table: dict_data_sources</comment>
        <createTable tableName="dict_data_sources" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="eug-7" logicalFilePath="path-independent" author="eugene" context="postgres"> 
	    <comment>Creating primary key for table: dict_data_sources</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_data_sources"
	            schemaName="apps"
	            tableName="dict_data_sources"/>
	</changeSet>
	
	<changeSet id="eug-8" logicalFilePath="path-independent" author="eugene" context="postgres">
		<comment>Load demo data to table: dict_data_sources</comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/dict_data_sources.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="dict_data_sources">
	        
	        <column name="id" 	type="NUMERIC"/>
	        <column name="code" type="STRING"/>
	        <column name="name"	type="STRING"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="dict_data_sources" />
        </rollback>	
	</changeSet>	
	
	<changeSet id="eug-9" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: dict_data_sources</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_data_sources_s"
	            startValue="7"/>
	</changeSet>	
	
</databaseChangeLog>
