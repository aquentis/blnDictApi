<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    

    <changeSet id="eug-26" logicalFilePath="path-independent" author="eugene" context="postgres">        
        <comment>Creating table: dict_regions</comment>
        <createTable tableName="dict_regions" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
                                                 
        </createTable>
    </changeSet>

	<changeSet id="eug-27" logicalFilePath="path-independent" author="eugene" context="postgres"> 
	    <comment>Creating primary key for table: dict_regions</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_regions"
	            schemaName="apps"
	            tableName="dict_regions"/>
	</changeSet>
	
	<changeSet id="eug-28" logicalFilePath="path-independent" author="eugene" context="postgres">
		<comment>Load demo data to table: dict_regions</comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/dict_regions.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="dict_regions">
	        
	        <column name="id" 				type="NUMERIC"/>
	        <column name="code" 			type="STRING"/>
	        <column name="name"				type="STRING"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="dict_regions" />
        </rollback>	
	</changeSet>	
	
	<changeSet id="eug-29" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: dict_regions</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_regions_s"
	            startValue="15"/>
	</changeSet>	
	
</databaseChangeLog>
