<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    
    <changeSet id="eug-1" logicalFilePath="path-independent" author="eugene" context="postgres">
    	<comment>Creating schema</comment>        
	    <sql dbms="postgresql" endDelimiter=";">
	        CREATE SCHEMA apps
	    </sql>    
	    
		<rollback>
		    <sql dbms="postgresql" endDelimiter=";">
		        DROP SCHEMA apps
		    </sql>    
        </rollback>	
    </changeSet>


    <changeSet id="eug-2" logicalFilePath="path-independent" author="eugene" context="postgres">        
        <comment>Creating table: dict_units</comment>
        <createTable tableName="dict_units" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
                        
            <column name="base_unit" type="varchar(12)">
                <constraints nullable="true"/>
            </column>

            <column name="factor" type="number">
                <constraints nullable="true"/>
            </column>            
        </createTable>
    </changeSet>

	<changeSet id="eug-3" logicalFilePath="path-independent" author="eugene" context="postgres"> 
	    <comment>Creating primary key for table: dict_units</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_units"
	            schemaName="apps"
	            tableName="dict_units"/>
	</changeSet>
	
	<changeSet id="eug-4" logicalFilePath="path-independent" author="eugene" context="postgres">
		<comment>Load demo data to table: dict_units</comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/dict_units.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="dict_units">
	        
	        <column name="id" 			type="NUMERIC"/>
	        <column name="code" 		type="STRING"/>
	        <column name="name"			type="STRING"/>
	        <column name="base_unit" 	type="STRING"/>
	        <column name="factor" 		type="NUMERIC"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="dict_units" />
        </rollback>	
	</changeSet>	
	
	<changeSet id="eug-5" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: dict_units</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_units_s"
	            startValue="11"/>
	</changeSet>	
	
	
</databaseChangeLog>
