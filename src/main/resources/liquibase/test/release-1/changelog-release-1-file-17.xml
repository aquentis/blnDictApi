<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    

    <changeSet id="eug-66" logicalFilePath="path-independent" author="eugene" context="postgres">        
        <comment>Creating table: dict_substation_types</comment>
        <createTable tableName="dict_substation_types" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            
            <column name="short_name" type="varchar(10)">
                <constraints nullable="false"/>
            </column>            
        </createTable>
    </changeSet>

	<changeSet id="eug-67" logicalFilePath="path-independent" author="eugene" context="postgres"> 
	    <comment>Creating primary key for table: dict_substation_types</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_substation_types"
	            schemaName="apps"
	            tableName="dict_substation_types"/>
	</changeSet>
	
	<changeSet id="eug-68" logicalFilePath="path-independent" author="eugene" context="postgres">
		<comment>Load demo data to table: dict_substation_types</comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/dict_substation_types.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="dict_substation_types">
	        
	        <column name="id" 			type="NUMERIC"/>
	        <column name="code" 		type="STRING"/>
	        <column name="name"			type="STRING"/>
	        <column name="short_name"	type="STRING"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="dict_substation_types" />
        </rollback>	
	</changeSet>	
	
	<changeSet id="eug-69" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: dict_substation_types</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_substation_types_s"
	            startValue="3"/>
	</changeSet>	
	
</databaseChangeLog>
